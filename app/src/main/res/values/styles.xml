        <item name="android:textColor">@drawable/selector_main_tab_txt</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text_editStyle" >

        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">47dp</item>
        <item name="android:background">@mipmap/shuruk</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">18sp</item>

    </style>

