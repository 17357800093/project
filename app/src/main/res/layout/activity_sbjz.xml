<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".activity.activity2.SbjzActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/id_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备校正"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mylayout"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP校正"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:text="推荐"
            android:textColor="@color/txt_light_gray"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mylayout"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动校正"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="推荐使用APP校正，若APP校正不成功可尝试手动校正"
        android:layout_marginTop="10dp"
        android:textColor="@color/txt_light_gray"
        />
</LinearLayout>