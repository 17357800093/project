<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".activity.activity2.SbxxActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/id_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备信息"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mylayout"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备别名"
            android:textSize="11sp"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="100"
            android:textColor="@color/txt_light_gray"
            android:background="@null"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mylayout"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC"
            android:textSize="11sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:text="121212121"
            android:textColor="@color/txt_light_gray"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id_layout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mylayout"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备SN码"
            android:textSize="11sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:text="121212121"
            android:textColor="@color/txt_light_gray"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/id_bt1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bt"
            android:text="保存设置"
            android:gravity="center"
            android:textColor="@color/bg_white"
            />

    </RelativeLayout>
</LinearLayout>