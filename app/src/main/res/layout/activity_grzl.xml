<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity4.GrzlActivity"
    android:orientation="vertical"
    android:background="@color/bg"
    android:id="@+id/activity_rootview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/id_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_layout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/mylayout"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/id_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/txt_gray"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_layout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/mylayout"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/id_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1999年1月1日"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/txt_gray"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_layout3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/mylayout"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/id_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165厘米"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/txt_gray"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_layout4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/mylayout"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/id_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66公斤"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/txt_gray"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/next"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="150dp">
            <Button
                android:id="@+id/id_bt1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bt"
                android:text="修改"
                android:gravity="center"
                android:textColor="@color/bg_white"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>